      body {
        color: #4d4d4d;
        font-family: Helvetica, sans-serif;
        font-size: 18px;
        font-weight: 300;
        line-height: 1.5;
      }

      h1, h2, h3, h4 {
        color: black;
      }

      a, a:hover, a:visited {
        color: black;
        font-weight: bold;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      input {
        font-family: Helvetica, sans-serif;
        font-size: 18px;
        font-weight: 300;
        line-height: 1.5;
